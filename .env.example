# ================================
# SNIES MONOREPO - Environment Variables
# ================================
# Copiar este archivo a .env y configurar los valores

# ================================
# DATABASE (PostgreSQL)
# ================================
DB_NAME=snies_db
DB_USER=postgres
DB_PASSWORD=admin
DB_HOST=db
DB_PORT=5432
DB_PORT_EXPOSE=5432

# ================================
# BACKEND (Django)
# ================================
DJANGO_PORT_EXPOSE=8000
DJANGO_SETTINGS_MODULE=config.settings
DEBUG=True
ALLOWED_HOSTS=*
SECRET_KEY=django-insecure-change-this-in-production

# Django CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# JWT Settings
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# ================================
# FRONTEND (Next.js)
# ================================
FRONTEND_PORT_EXPOSE=3000

# Public API URL (accesible desde el navegador)
# Para desarrollo local: http://localhost:8000
# Para producción: https://api.tu-dominio.com
NEXT_PUBLIC_API_URL=http://localhost:8000

# Next.js Analytics (opcional)
# NEXT_PUBLIC_ANALYTICS_ID=

# ================================
# PRODUCTION SETTINGS
# ================================
# Descomentar y configurar para producción

# DEBUG=False
# ALLOWED_HOSTS=tu-dominio.com,www.tu-dominio.com
# SECRET_KEY=<generar-clave-segura-con-python-secrets>
# DB_PASSWORD=<contraseña-segura-generada>
# NEXT_PUBLIC_API_URL=https://api.tu-dominio.com

# ================================
# OPTIONAL SERVICES
# ================================

